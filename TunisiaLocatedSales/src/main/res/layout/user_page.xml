<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />


    <android.support.v4.widget.DrawerLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fruitback"
    android:id="@+id/MainContainer">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:id="@+id/relativeLayout2" >

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="25dp"
            android:id="@+id/UserImg"
            android:src="@drawable/nourriturescouleur"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequa Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim"
            android:layout_toEndOf="@+id/UserImg"
            android:textColor="@color/white"
            android:id="@+id/Descri"
            android:textSize="7sp"
            android:layout_below="@+id/UserName"
            android:paddingLeft="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nourriture"
            android:layout_toEndOf="@+id/UserImg"
            android:textColor="@color/white"
            android:id="@+id/UserName"
            android:textSize="22sp"
            android:paddingLeft="20dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeLayout2"
        android:layout_marginTop="15dp">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ville :"
        android:id="@+id/villetxt"
        android:layout_marginLeft="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Elkef"
            android:id="@+id/UserVille"
            android:layout_marginLeft="15dp"
            android:layout_toEndOf="@id/villetxt"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Metier :"
            android:id="@+id/metiertxt"
            android:layout_marginLeft="15dp"
            android:layout_below="@+id/villetxt"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Artisan"
            android:id="@+id/UserMetier"
            android:layout_marginLeft="15dp"
            android:layout_toEndOf="@id/metiertxt"
            android:layout_below="@+id/UserVille"
            android:layout_marginTop="10dp" />

        <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/gmapicone"
            android:id="@+id/gmapButton"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/metiertxt"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="6, Rue d'Alger Elkef 7100"
            android:id="@+id/UserAdresse"
            android:layout_below="@+id/UserMetier"
            android:layout_marginTop="27dp"
            android:layout_toEndOf="@+id/gmapButton"
            android:layout_marginLeft="10dp" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ratinglay"
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_toEndOf="@+id/teltxt"
            android:layout_toRightOf="@+id/teltxt"
            android:layout_marginTop="10dp">

            <Button
                android:layout_width="30dp"
                android:layout_height="35dp"
                android:id="@+id/star1"
                android:background="@drawable/onestarvide"/>
            <Button
                android:layout_width="30dp"
                android:layout_height="35dp"
                android:id="@+id/star2"
                android:background="@drawable/onestarvide"/>
            <Button
                android:layout_width="30dp"
                android:layout_height="35dp"
                android:id="@+id/star3"
                android:background="@drawable/onestarvide"/>
            <Button
                android:layout_width="30dp"
                android:layout_height="35dp"
                android:id="@+id/star4"
                android:background="@drawable/onestarvide"/>
            <Button
                android:layout_width="30dp"
                android:layout_height="35dp"
                android:id="@+id/star5"
                android:background="@drawable/onestarvide"/>
        </LinearLayout>

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/usser"
            android:layout_below="@+id/ratinglay"
            android:id="@+id/iconeuser"
            android:layout_alignStart="@+id/ratinglay"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp" />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/numerofraiting"
            android:textColor="#fff"
            android:text="4290"
            android:layout_toEndOf="@+id/iconeuser"
            android:layout_below="@+id/ratinglay"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="4dp"
            android:textSize="10sp"/>

        <Button
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:text="Rate it"
            android:id="@+id/rateit"
            android:layout_toEndOf="@+id/numerofraiting"
            android:layout_below="@id/ratinglay"
            android:layout_marginLeft="5dp"
            android:textSize="9sp" />

        <ImageView
           android:layout_width="40dp"
           android:layout_height="40dp"
           android:src="@drawable/tel"
           android:id="@+id/telimg"
           android:layout_marginLeft="40dp"
           android:layout_below="@+id/gmapButton"
           android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/teltxt"
            android:text="Téléphone :"
            android:layout_below="@+id/gmapButton"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@id/telimg"
            android:textSize="17sp"
            android:layout_marginLeft="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/UserTel"
            android:text="52.444.024"
            android:layout_below="@+id/gmapButton"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@id/teltxt"
            android:textSize="17sp"
            android:layout_marginLeft="10dp"
            android:textStyle="bold|italic" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/mail"
            android:id="@+id/mailimg"
            android:layout_marginLeft="40dp"
            android:layout_below="@+id/telimg"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mailtxt"
            android:text="Mail :"
            android:layout_below="@+id/telimg"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@id/telimg"
            android:textSize="17sp"
            android:layout_marginLeft="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/UserMail"
            android:text="hassan.barbouche@esprit.tn"
            android:layout_below="@+id/telimg"
            android:layout_marginTop="22dp"
            android:layout_toEndOf="@id/mailtxt"
            android:textSize="14sp"
            android:textStyle="bold|italic"
            android:layout_marginLeft="10dp" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/btnlayout"

            android:layout_below="@+id/mailimg"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp">
            <Button
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:background="@drawable/envmail"/>
            <Button
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:background="@drawable/appler"
                android:layout_marginLeft="10dp" />
            <Button
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:background="@drawable/commenter"
                android:layout_marginLeft="10dp" />
        </LinearLayout>

        <GridView

            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:id="@+id/CommentaireList"
            android:numColumns="2"

            android:horizontalSpacing="8dp"
            android:verticalSpacing="4dp"
            android:layout_below="@+id/btnlayout"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:scrollbars="vertical"

           ></GridView>
        <Button
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:text="Ok"
            android:layout_below="@+id/CommentaireList"
            android:id="@+id/ButtonOK"

            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_marginTop="20dp" />


        <EditText
            android:layout_width="match_parent"
            android:id="@+id/comenter"
            android:layout_height="wrap_content"
            android:layout_below="@+id/CommentaireList"
            android:layout_toStartOf="@+id/ButtonOK"
            android:hint="Votre commentaire..."
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="20dp"
            android:textSize="14sp"
            android:inputType="textUri" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@+id/ButtonOK"></LinearLayout>


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/relativeLayout2"
        >
    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_unit_id"
        android:layout_gravity="center_horizontal|bottom">
    </com.google.android.gms.ads.AdView>
    </LinearLayout>






</RelativeLayout>
        </ScrollView>






        <include
            android:layout_width="@dimen/drawer_width"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            layout="@layout/list_view_drawer" />
    </android.support.v4.widget.DrawerLayout>


</LinearLayout>