<?xml version="1.0" encoding="utf-8"?>
<com.esprit.android.ebi3.ui.views.MaterialRippleLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.esprit.android.inart"
    style="@style/RippleStyle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:id="@+id/viewback"
    >




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="vertical"
        android:id="@+id/listbackground"
        android:background="@color/black">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:minHeight="72dp"
            android:orientation="horizontal"
            android:paddingBottom="4dp"
            android:paddingTop="4dp"
            >



            <ImageView
                android:id="@+id/Icone_drawer"
                style="@style/TextViewAppearance.Title1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="32dp"
                android:layout_weight="0"
                android:padding="0dp"



                />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1" >

                <com.esprit.android.ebi3.font.RobotoTextView
                    android:id="@+id/title"
                    style="@style/TextViewAppearance.Title1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:paddingBottom="0dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="0dp"
                    android:paddingTop="0dp"
                    android:textColor="#fff"
                    android:textSize="14sp"
                    />

                <com.esprit.android.ebi3.font.RobotoTextView
                    style="@style/TextViewAppearance.Title1"
                    android:id="@+id/ListDesc"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:paddingBottom="0dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="0dp"
                    android:paddingTop="0dp"
                    android:text="Légumes,Fruits,Viandes,A Manger,Oeufs,Miel,Céréales,Poissons,Huiles..."
                    android:textColor="@color/main_color_grey_400"
                    android:textSize="8sp"
                    />

            </LinearLayout>



        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/main_color_grey_300" />
    </LinearLayout>

</com.esprit.android.ebi3.ui.views.MaterialRippleLayout>