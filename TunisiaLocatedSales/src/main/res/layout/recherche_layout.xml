<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">



    <include layout="@layout/toolbar" />


    <android.support.v4.widget.DrawerLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/include">



       <ScrollView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:background="@drawable/loginback">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/MainContainer"
                >

                <ImageView
                    android:layout_width="180dp"
                    android:layout_height="300dp"
                    android:src="@drawable/tunisiavide"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="20dp"
                    android:id="@+id/TunisiaMap"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="400dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"
                    android:id="@+id/ListTown"
                    android:layout_marginLeft="15dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="400dp"
                        android:orientation="vertical">

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:id="@+id/Tunis"
                            android:text="Tunis"
                            android:textColor="#fff"
                            android:background="@android:color/transparent"/>
                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:id="@+id/Ariana"
                            android:text="Ariana"
                            android:textColor="#fff"
                            android:background="@android:color/transparent"/>
                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:id="@+id/Manouba"
                            android:text="Manouba"
                            android:textColor="#fff"
                            android:background="@android:color/transparent"/>
                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:id="@+id/Gbeli"
                            android:text="Gbeli"
                            android:textColor="#fff"
                            android:background="@android:color/transparent"/>

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:id="@+id/Jendouba"
                            android:text="Jendouba"
                            android:textColor="#fff"
                            android:background="@android:color/transparent"/>
                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:id="@+id/kairouan"
                            android:text="kairouan"
                            android:textColor="#fff"
                            android:background="@android:color/transparent"/>
                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:id="@+id/Kef"
                            android:text="Kef"
                            android:textColor="#fff"
                            android:background="@android:color/transparent"/>
                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:id="@+id/Beja"
                            android:text="Beja"
                            android:textColor="#fff"
                            android:background="@android:color/transparent"/>

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:id="@+id/Bizerte"
                            android:text="Bizerte"
                            android:textColor="#fff"
                            android:background="@android:color/transparent"/>

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:id="@+id/Gabes"
                            android:text="Gabes"
                            android:textColor="#fff"
                            android:background="@android:color/transparent"/>
                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:id="@+id/Gafsa"
                            android:text="Gafsa"
                            android:textColor="#fff"
                            android:background="@android:color/transparent"/>
                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:id="@+id/Gasserine"
                            android:text="Gasserine"
                            android:textColor="#fff"
                            android:background="@android:color/transparent"/>






                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="400dp"
                        android:orientation="vertical">

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:id="@+id/Mednine"
                            android:text="Mednine"
                            android:textColor="#fff"
                            android:background="@android:color/transparent"/>
                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:id="@+id/Monastir"
                            android:text="Monastir"
                            android:textColor="#fff"
                            android:background="@android:color/transparent"/>
                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:id="@+id/Nabeul"
                            android:text="Nabeul"
                            android:textColor="#fff"
                            android:background="@android:color/transparent"/>
                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:id="@+id/Sfax"
                            android:text="Sfax"
                            android:textColor="#fff"
                            android:background="@android:color/transparent"/>

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:id="@+id/Sidibouzid"
                            android:text="Sidibouzid"
                            android:textColor="#fff"
                            android:background="@android:color/transparent"/>
                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:id="@+id/Siliana"
                            android:text="Siliana"
                            android:textColor="#fff"
                            android:background="@android:color/transparent"/>
                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:id="@+id/Sousse"
                            android:text="Sousse"
                            android:textColor="#fff"
                            android:background="@android:color/transparent"/>
                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:id="@+id/Tatawin"
                            android:text="Tatawin"
                            android:textColor="#fff"
                            android:background="@android:color/transparent"/>

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:id="@+id/Tozeur"
                            android:text="Tozeur"
                            android:textColor="#fff"
                            android:background="@android:color/transparent"/>

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:id="@+id/Zaghwen"
                            android:text="Zaghwen"
                            android:textColor="#fff"
                            android:background="@android:color/transparent"/>

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:id="@+id/Mahdia"
                            android:text="Mahdia"
                            android:textColor="#fff"
                            android:background="@android:color/transparent"/>

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:id="@+id/AllTunisia"
                            android:text="Toute la Tunisie"
                            android:textColor="#fff"
                            android:background="@android:color/transparent"
                            android:textSize="20sp"
                            android:layout_marginLeft="15dp" />






                    </LinearLayout>




                </LinearLayout>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/RechercheKey"
                    android:layout_below="@+id/ListTown"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:hint="Votre Recherche ..."
                    android:textColor="#ffff" />

                <GridView

                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:id="@+id/CategorieGrid"
                    android:numColumns="2"

                    android:horizontalSpacing="8dp"
                    android:verticalSpacing="4dp"
                    android:layout_below="@+id/RechercheKey"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:scrollbars="vertical"

                    ></GridView>

                <EditText
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/PrixMin"
                    android:layout_below="@+id/CategorieGrid"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:textColor="#ffff"
                    android:hint="Prix Min ..."
                    android:inputType="number" />

                <EditText
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/PrixMax"
                    android:layout_below="@+id/PrixMin"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:hint="Prix Max ..."

                    android:textColor="#ffff"
                    android:layout_marginBottom="30dp"
                    android:inputType="number" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:id="@+id/GoBtn"
                    android:layout_toEndOf="@+id/PrixMin"
                    android:layout_below="@+id/CategorieGrid"
                    android:text="Go"
                    android:layout_marginRight="20dp"
                    android:background="#2ca9d7"
                    android:layout_marginBottom="30dp"/>








            </RelativeLayout>

       </ScrollView>




        <include
            android:layout_width="@dimen/drawer_width"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            layout="@layout/list_view_drawer" />
    </android.support.v4.widget.DrawerLayout>


</LinearLayout>