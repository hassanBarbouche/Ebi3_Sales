<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <com.esprit.android.ebi3.font.KenBurnsView
        android:id="@+id/ken_burns_images"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- We use dps for font size: we don't want our logo
    to become larger if user has set larger text in global
    settings. -->

<ImageView
    android:layout_width="200dp"
    android:layout_height="200dp"
    android:src="@drawable/samsung_logo"
    android:layout_alignParentLeft="false"
    android:layout_marginLeft="15dp"
    android:layout_marginTop="20dp" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/tunisiana"

        android:layout_marginTop="60dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="40dp" />

    <ImageView
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:src="@drawable/enactuslogo"
        android:id="@+id/enactuslogo"
        android:layout_centerInParent="true"

        tools:ignore="SpUsage" />

    <TextView
        android:id="@+id/welcome_text"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/enactuslogo"
        android:layout_centerHorizontal="true"
        android:alpha="0.0"
        android:text="When we compete to improve lives ... We all win"
        android:textColor="#fff" />



</RelativeLayout>